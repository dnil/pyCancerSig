params {
    /* Command line parameters */
    bam_pair_dir = "" // The bam folder, on commandline ( --bam_pair_dir )
    project = "" // Set project or supply on commandline ( --project )
    out_dir = "./results"
    help = false

    /* System config */
    version = '0.1' // Pipeline version    
}
process {
    clusterOptions = {
        "-A $params.project"
    }

    queue = 'core'
    executor = 'slurm'
    time = '24h'
}
